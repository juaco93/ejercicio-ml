<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginStart="10dp"
    android:paddingTop="50dp"
    tools:context="com.jadevelopment.ejercicioml.ui.PaymentMethodSelection">

    <TextView
        android:id="@+id/lbSeleccionarBanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="SeleccionÃ¡ tu Banco:" />

    <Spinner
        android:id="@+id/spBanco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbSeleccionarBanco"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spBanco"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@color/colorAccent"
        android:onClick="irASeleccionCuotas"
        android:text="Continuar"
        android:textColor="@android:color/white" />

    <ProgressBar
        android:id="@+id/pbCardIssuers"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnContinuar"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:visibility="gone"></ProgressBar>

</RelativeLayout>